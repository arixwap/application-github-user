<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arixwap.dicoding.aplikasigithubuser.DetailUserActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <ImageView
        tools:src="@tools:sample/avatars"
        android:id="@+id/img_detail_user"
        android:contentDescription="@string/lorem_ipsum"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <TextView
        android:id="@+id/name_detail_user"
        android:text="@string/text_full_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/img_detail_user"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <TextView
        android:id="@+id/username_detail_user"
        android:text="@string/text_username"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/name_detail_user"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <TextView
        android:id="@+id/location_detail_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:drawablePadding="4dp"
        android:text="@string/text_location"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/username_detail_user"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"/>

    <TextView
        android:id="@+id/company_detail_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="4dp"
        android:text="@string/text_company"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_baseline_business_24"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/location_detail_user" />

    <TextView
        android:id="@+id/follower_detail_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:drawablePadding="4dp"
        android:text="@string/text_followers"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_baseline_people_24"
        app:layout_constraintEnd_toStartOf="@id/following_detail_user"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/company_detail_user" />

    <TextView
        android:id="@+id/following_detail_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:text="@string/text_following"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_baseline_people_outline_24"
        app:layout_constraintBaseline_toBaselineOf="@id/follower_detail_user"
        app:layout_constraintEnd_toStartOf="@id/repository_detail_user"
        app:layout_constraintStart_toEndOf="@id/follower_detail_user"
        app:layout_constraintTop_toTopOf="@id/follower_detail_user" />

    <TextView
        android:id="@+id/repository_detail_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:text="@string/text_repository"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_baseline_code_24"
        app:layout_constraintBaseline_toBaselineOf="@id/following_detail_user"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toEndOf="@id/following_detail_user"
        app:layout_constraintTop_toTopOf="@id/following_detail_user" />

</androidx.constraintlayout.widget.ConstraintLayout>
